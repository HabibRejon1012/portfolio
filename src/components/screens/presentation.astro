---
import {TypedWords} from "@/components/typed-words"
import DefaultSectionLayout from "@/layouts/default-section-layout.astro";
import { ROUTES } from "src/utils/const";
import { DEFAULT_CONTAINER } from "src/utils/defaul-styles";
import { css } from "styled-system/css";




const PRESENTATION_CONTAINER = css.raw({
    display: "flex",
    paddingTop: "32px",
    flexWrap: "wrap",
    justifyContent: "space-between",
})

const INFO_COTAINER = css({
    width: "100%",
    maxWidth: "849px",
    display: "flex",
    flexDirection: "column",
    flex: "1",
    md: {
    }
})

const INFO_CONTAINER_WELCOME = css({
    fontFamily: "primary",
    letterSpacing: "3px",
    mb: "5px"
})

const INFO_CONTAINER_TITLE = css({
    fontWeight: 700,
    fontSize: "45px",
    lineHeight: "55px",
    fontFamily: "secondary",
    marginBottom: "5px",
    md: {
        fontSize: "60px",
        lineHeight: "62px",
    marginBottom: "22px",

    },
    _dark: {
        color: "white"
    },
    "& span": {
        color: "#ff014f"
    }
})

const IMAGE_CONTAINER = css({
    maxWidth: "500px",
    width: "500px",
    minW: "300px",
    flex: "2",
    display: "none",
    md: {
        display: "block"
    }
})

const IMAGE =css({
    width: "100%",
    height: "auto"
})

const INFO_CONTAINER_FOOTER = css({
            display: "flex",
            mt: "36px",
            justifyContent: "space-between",
            flexDirection: "column",
            rowGap: "16px",
            md: {
                flexDir: "row"
            }
})
const INFO_ME_CONTAINER = css({
    display: "flex",
    columnGap: "16px",
    flexDirection: "column"
})

const INFO_ME_TITLE = css({
    fontWeight: "300",
    marginBottom: "20px",
    letterSpacing: "2px",
    fontSize: "14px",
    textTransform: "uppercase"
})

const INFO_ME_OPTION = css({
    textDecoration: "none",
    border: "none",
    height: "70px",
    width: "70px",
    display: "flex",
    justifyContent: "center",
    alignItems:"center",
    padding: "10px 5px",
    boxSizing: "border-box",
    cursor: "pointer",
    borderRadius: "10px",
    boxShadow: `shadow_button_neo`,
    background: "bg_button_neo",
    transitionDuration: "0.5s",
    transitionProperty: "transform",
    _hover: {
        transform: "translateY(-3px)"
    }
})


const INFO_ME_SECTION = css({
    display: "flex",
    columnGap: "32px",
    flexWrap: "wrap",
    rowGap: "24px",
    width: "100%",
    maxWidth: "500px",
    md: {
    }
})
---

    <DefaultSectionLayout id={ROUTES.WELCOME.id} className={PRESENTATION_CONTAINER} >
    <article class={INFO_COTAINER}>
        <header>
            <p class={INFO_CONTAINER_WELCOME}>Bienvenido a mi mundo</p>
            <h1 class={INFO_CONTAINER_TITLE}>
                Hola soy <span class="">Habib Rejón</span> especializado en tecnologías
                <TypedWords client:load  words={["Tv", "Web", "Movil"]} />
            </h1>
            <h2>
                Con mas de 4 años de experiencia y amor por la tecnologia me siento contento de mostrarte mi experiencia y trabajar junto a ti!
            </h2>
            <div class={css({
                display: "flex",
                width: "100%",
                justifyContent: "center",
                margin: "16px 0px"
            })}>
            <img class={css({
                 width:"300px",
                    height: "auto",
                md: {
                    display: "none",
                   

                }
            })} src="https://rainbowit.net/themes/inbio/wp-content/uploads/2021/08/banner-01.png" alt="">
            </div>
        </header>

        <footer class={INFO_CONTAINER_FOOTER}>
            <div class={INFO_ME_CONTAINER}>
                <h3 class={INFO_ME_TITLE}>Mis Redes:</h3>
                <div class={INFO_ME_SECTION}>
                    <a class={INFO_ME_OPTION}>
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-facebook" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3" /></svg>
                    </a>

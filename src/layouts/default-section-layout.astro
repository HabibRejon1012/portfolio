---
import { DEFAULT_CONTAINER } from "src/utils/defaul-styles";
import { css } from "styled-system/css";
const {id, className, animation} = Astro.props 

const BASE_CONTAINER = css.raw({
    width: "100%",
    display: "flex",
}, DEFAULT_CONTAINER)
---


<section id={id} class={css(BASE_CONTAINER, className) + " animation-container"} >
    <slot />
</section>